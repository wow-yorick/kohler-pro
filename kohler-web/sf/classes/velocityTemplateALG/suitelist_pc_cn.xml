<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="pageData" param="@page_id,@template_type,@lang">

	<!-- seo信息 -->
	<data name="seo" tableName="PAGE" filter="PAGE_ID=@page_id">
		<field name="seo_title" fieldType="physicalValue" fieldName="SEO_TITLE"/>
		<field name="seo_keywords" fieldType="physicalValue" fieldName="SEO_KEYWORDS"/>
		<field name="seo_description" fieldType="physicalValue" fieldName="SEO_DESCRIPTION"/>
		<field name="seo_h1tag" fieldType="physicalValue" fieldName="SEO_H1TAG"/>
	</data>

	<!-- 套间 -->
	<multidata name="suites" sqlResource="SELECT CATEGORY_METADATA_ID, SUITE_NAME,LIST_CONTENT,SUITE_ID,IMAGE_SOURCE,LIST_IMAGE_URL,LIST_IMAGE_ID,LIST_IMAGE_ALT,
	CATEGORY_METADATA_ID,PC_TEMPLATE_ID,MOBILE_TEMPLATE_ID FROM VW_SUITE WHERE CATEGORY_METADATA_ID = 1 AND LANG=@lang ORDER BY SEQ_NO,SUITE_ID">
		<field name="name" fieldType="physicalValue" fieldName="SUITE_NAME"/>
		<field name="list_content" fieldType="physicalValue" fieldName="LIST_CONTENT"/>
		<field name="suite_url" fieldType="urlValue" dependOn="SUITE_METADATA_ID"  service="suiteUrlAnalysis" />
	</multidata>
</page>
