<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.kohler</groupId>
		<artifactId>kohler-enterprise</artifactId>
		<version>0.0.1</version>
	</parent>

	<groupId>com.kohler</groupId>
	<artifactId>kohler-web</artifactId>
	<name>kohler-web</name>
	<description>kohler-web</description>
	<packaging>war</packaging>
	<version>0.0.1</version>

	<dependencies>
		<dependency>
			<groupId>javax.servlet.jsp</groupId>
			<artifactId>jsp-api</artifactId>
			<version>2.2</version>
		</dependency>
		<dependency>
			<groupId>com.kohler</groupId>
			<artifactId>kohler-account</artifactId>
			<version>0.0.1</version>
		</dependency>
		<dependency>
			<groupId>com.kohler</groupId>
			<artifactId>kohler-content</artifactId>
			<version>0.0.1</version>
		</dependency>
		<dependency>
			<groupId>com.kohler</groupId>
			<artifactId>kohler-fileasset</artifactId>
			<version>0.0.1</version>
		</dependency>

		<dependency>
			<groupId>com.kohler</groupId>
			<artifactId>kohler-product</artifactId>
			<version>0.0.1</version>
		</dependency>
		<dependency>
			<groupId>com.kohler</groupId>
			<artifactId>kohler-report</artifactId>
			<version>0.0.1</version>
		</dependency>
		<dependency>
			<groupId>com.kohler</groupId>
			<artifactId>kohler-search</artifactId>
			<version>0.0.1</version>
		</dependency>
		<dependency>
			<groupId>com.kohler</groupId>
			<artifactId>kohler-section</artifactId>
			<version>0.0.1</version>
		</dependency>
		<dependency>
			<groupId>com.kohler</groupId>
			<artifactId>kohler-admin</artifactId>
			<version>0.0.1</version>
		</dependency>
		<dependency>
			<groupId>com.kohler</groupId>
			<artifactId>kohler-home</artifactId>
			<version>0.0.1</version>
		</dependency>
	</dependencies>


	<profiles>
		<profile>
			<id>dev1</id>
			<properties>
				<env>dev1</env>
			</properties>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
		</profile>
		<profile>
			<id>dev2</id>
			<properties>
				<env>dev2</env>
			</properties>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
		</profile>
		<profile>
			<id>staging</id>
			<properties>
				<env>staging</env>
			</properties>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
		</profile>
		<profile>
			<id>product</id>
			<properties>
				<env>product</env>
			</properties>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
		</profile>
	</profiles>


	<build>
		<finalName>kohler-${env}</finalName>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<filters>
			<filter>src/main/resources/config-${env}.properties</filter>
		</filters>
		<plugins>
			<plugin>
				<groupId>org.mortbay.jetty</groupId>
				<artifactId>maven-jetty-plugin</artifactId>
				<version>6.1.24</version>
				<configuration>
					<!-- target/Kohler -->
					<webAppSourceDirectory>src/main/webapp</webAppSourceDirectory>
					<scanIntervalSeconds>3</scanIntervalSeconds>
					<contextPath>/kohler</contextPath>
					<webDefaultXml>jetty.xml</webDefaultXml>
					<connectors>
						<connector implementation="org.mortbay.jetty.nio.SelectChannelConnector">
							<port>8080</port>
						</connector>
					</connectors>
					<stopPort>9001</stopPort>
					<stopKey>foo</stopKey>
				</configuration>
			</plugin>
		</plugins>
	</build>



</project>